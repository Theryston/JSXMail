{
  "name": "api",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "yarn db:prepare && nest build",
    "start:offline": "serverless offline --httpPort 3331",
    "start:dev": "nodemon --watch src -e ts --exec \"yarn build && yarn start:offline\"",
    "deploy:aws": "yarn build && yarn serverless deploy --stage prod --verbose",
    "undeploy:aws": "yarn serverless remove --stage prod --verbose",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs}/**/*.ts\" --fix",
    "db:prepare": "echo \"coming soon\""
  },
  "dependencies": {
    "@codegenie/serverless-express": "^4.13.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "aws-lambda": "^1.0.7",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "serverless-domain-manager": "^7.3.3",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-offline": "^13.3.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/aws-lambda": "^8.10.133",
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.0.0",
    "serverless": "^3.38.0",
    "serverless-offline": "^13.3.3",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  }
}
