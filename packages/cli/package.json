{
  "name": "@jsx-mail/cli",
  "version": "1.1.1",
  "description": "The official jsx mail CLI. üöÄ‚úâÔ∏è",
  "types": "build/types/types.d.ts",
  "bin": {
    "jsxm": "bin/cli"
  },
  "scripts": {
    "clean-build": "rm -rf ./build",
    "compile": "tsc -p .",
    "copy-views": "copyfiles -u 1 src/**/*.handlebars build/",
    "copy-templates": "copyfiles -u 1 src/templates/*.ejs build/",
    "copy-folders": "pnpm run copy-views && pnpm run copy-templates",
    "build": "pnpm clean-build && pnpm compile && pnpm copy-folders",
    "prepublishOnly": "pnpm build",
    "lint": "eslint src",
    "test": "jest",
    "watch": "jest --watch",
    "snapupdate": "jest --updateSnapshot",
    "coverage": "jest --coverage"
  },
  "files": [
    "build",
    "LICENSE",
    "readme.md",
    "docs",
    "bin"
  ],
  "license": "MIT",
  "dependencies": {
    "@jsx-mail/core": "*",
    "@types/nodemon": "^1.19.2",
    "@types/open": "^6.2.1",
    "express": "^4.18.1",
    "express-handlebars": "^6.0.6",
    "gluegun": "latest",
    "jsx-mail": "workspace:^1.0.3",
    "loading-cli": "^1.1.0",
    "nodemon": "^2.0.19",
    "open": "^8.4.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/express-handlebars": "^6.0.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^12.20.55",
    "copyfiles": "^2.4.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
